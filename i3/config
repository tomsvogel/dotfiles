exec --no-startup-id synclient RightButtonAreaTop=0
exec --no-startup-id synclient VertTwoFingerScroll=1
exec --no-startup-id synclient VertScrollDelta=-30
exec --no-startup-id synclient HorizTwoFingerScroll=1
